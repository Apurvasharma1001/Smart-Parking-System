# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection (Get this from MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/parkit?retryWrites=true&w=majority

# Security (At least 32 characters)
JWT_SECRET=your_super_secret_jwt_key_please_change_this

# Frontend URL for CORS (Add your Vercel URL here)
CLIENT_URL=https://<your-app>.vercel.app

# OpenCV Service URL (Local or Tunneled)
# If running locally, this will fail on Cloud unless you use ngrok
OPENCV_SERVICE_URL=http://localhost:5001
